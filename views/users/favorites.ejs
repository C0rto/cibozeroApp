<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <%- include('../partials/nav') %> <br />
    <!-- body is here -->
    <div class="container-md mt-2">
      <div class="container text-center my-2 border-light p-2">
        <div class="px-4 pt-5 my-3 text-center text-theme">
          <%- include('../partials/welcome') %> <br />
          <h1 class="display-4 fw-bold">I tuoi Preferiti</h1>

          <div class="overflow-hidden" style="max-height: 30vh"></div>
        </div>
      </div>
    </div>
    <!-- STARTING CARD -->
    <div class="cards mt-2" id="product-cards">
      <% for (let farm of farms){ %>
      <div class="card-w">
        <div href="" class="cardy shadow">
          <img
            src="https://images.unsplash.com/photo-1550989460-0adf9ea622e2?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=60&raw_url=true&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTl8fGZhcm0lMjBtYXJrZXR8ZW58MHx8MHx8&auto=format&fit=crop&w=700"
            class="card__image"
            alt=""
          />
          <div class="card__overlay">
            <div class="card__header">
              <div class="card__header-text">
                <h3 class="card__title"><%= farm.name %></h3>
                <span class="card__status"
                  ><%= farm.city%>, <%= farm.country %>
                </span>
              </div>
              <a
                href="/produttori/<%= farm._id %> "
                type="button"
                class="classic-btn"
              >
                Entra
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div class="mobile__bottom mb-5"></div>
    <%- include('../partials/footer') %>
    <script>
      const mapToken  = '<%- process.env.MAPBOX_TOKEN %>';
      const farms = {features:<%- JSON.stringify(farms) %>}
    </script>
    <script src="/js/clusterMap.js"></script>
  </body>
</html>
