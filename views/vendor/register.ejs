    <!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <%- include('../partials/navbar') %>
    <h1 class="text-center my-4">Registrazione Produttore</h1>
    <div class="container">
      <div class="row">
        <div class="col-md d-flex justify-content-center mb-5">
          <div class="" style="max-width: 32rem">
            <form
              action="/produttori/registrazione/nuova"
              method="POST"
              class="needs-validation"
              novalidate
            >
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  id="username"
                  required
                />
                <div class="valid-feedback">Perfetto!</div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  required
                />
              </div>
              <div class="valid-feedback">Perfetto!</div>
                <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  required
                />
                <div class="valid-feedback">Perfetto!</div>
              </div>
              <div class="d-flex justify-content-center my-4">
                <button
                  class="btn btn-bg btn-primary"
                  style="width: 32rem"
                  type="submit"
                >
                  Iscriviti
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>

