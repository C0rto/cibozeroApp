<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <%- include('../partials/nav') %>
    <div
      class="d-flex text-white p-2 justify-content-between"
      style="background-color: #415624"
    >
      <a href="/prodotti" class="text-white ms-4" style="text-decoration: none">
        < Indietro</a
