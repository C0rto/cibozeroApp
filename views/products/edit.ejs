<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-5" >
      <div class="row">
        <div class="col-md d-flex justify-content-center mb-5">
          <div class="shadow-sm border-light p-4 rounded" >
            <form action="/prodotti/<%= productFound._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="d-flex flex-column align-items-center">
              <div class="col text-center mb-3" style="width:100% ;">
                <h6 class="card-header mt-1 p-1 rounded bg-success text-white">Modifica </h6>
              </div>
              <h4 class="text-center text-capitalize text-muted"> <%= productFound.name %></h4>
              <img
                  src="<%= productFound.image.url %> "
                  class="img-fluid mb-3"
                  alt=""
                />
  <div class="mb-3">
                <label for="image" class="form-file-label my-2">
                  Cambia Immagine</label
                >
                <input
                  class="form-control form-control-sm"
                  type="file"
                  name="image"
                  id="image"
                />
              </div>
            </div>
            <hr>
            <div class="mb-3">
              <label for="name" class="form-label">Nome</label>
              <input
              class="form-control"
                type="text"
                name="name"
                id="name"
                value="<%= productFound.name %>"
              />
            </div>
      <div class="mb-3">
        <label for="price" class="form-label">Prezzo</label>
        <div class="input-group">
          <input
          class="form-control"
            type="text"
            name="price"
            id="price"
            value="<%= productFound.price %>"
          />
          <span class="input-group-text">â‚¬</span>
        </div>
      </div>         
      <div class="mb-3">
        <label for="name" class="form-label">Categoria</label>
        <select class="form-select" name="category" id="category">
          <% for(let cat of categories){ %>
          <option value="<%= cat %>" <%= productFound.category === cat ? 'selected ' : '' %> ><%= cat %></option>
          <% } %>
        </select>
      </div>
      <div class="d-flex justify-content-center my-4">
        <button class="btn btn-primary mx-2" type="submit">Modifica</button>
          <a class="btn btn-danger mx-2" href="/prodotti/<%= productFound._id %>">Annulla</a>
      </div>
    </form>
          </div>
        </div>
      </div>
    </div>
      <%- include('../partials/footer') %>
  </body>
</html>
